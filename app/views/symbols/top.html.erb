<section id="explain_0">
    <div class="container">
        <div class="row">
            <div class="span10 offset1">
                <h2 class="title tHide">TOP</h2>

                <div id="pop">
                    <div id="symbol_list">
                        <% @taiciis.each_with_index do |taicii,i| %>
                            <div class="popular">
                                <div class="symbol">
                                    <i class="icon-leaf"></i>
                                    <a href=<%="/symbols/"+taicii.id.to_s%>><span class="letter"><%= taicii.content %></span></a>

                                    <br><br><br>
                                    <div class="content clear">
                                        <a href=<%="/symbols/"+taicii.id.to_s%>><h6 class="topic_content">
                                            <i class="icon-edit"></i><%= taicii.topics[0].content %>
                                        </h6></a>
                                    </div>
                                </div>
                                <hr>
        
                                <div class="top_button_list">

                                    <ul class="nav nav-pills">
                                        <button <%if @feel_ids.include?(taicii.id)%> class="feel active" <%else%>class="feel" <%end%> value=<%= taicii.id%>>
                                            <i class="icon-arrow-up"></i><span><%= taicii.yes %></span>
                                        </button>
                                        <button <%if @no_feel_ids.include?(taicii.id)%> class="no_feel active" <%else%>class="no_feel" <%end%> value=<%= taicii.id%>>
                                            <i class="icon-arrow-down"></i><span><%= taicii.no %></span>
                                        </button>
                                    </ul>
                                </div>
                                
                                <div class="clear"></div>
                            </div>
                        <% end %>
                    </div>

                    <div id="get_more">
                        <input id="page" name="page" value="2" type="hidden">
                        <a id="symbol_more" class="def" href="javascript:;">加载更多</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>


<div id="symbol_template" style="display:none;">
    <div class="popular">
        <div class="symbol">
            <i class="icon-leaf"></i>
            <a href=''><span class="letter"></span></a>

            <br><br><br>
            <div class="content clear">
                <a href=''><h6 class="topic_content">
                    <i class="icon-edit"></i>
                </h6></a>
            </div>
        </div>
        <hr>

        <div class="top_button_list">

            <ul class="nav nav-pills">
                <button class='feel' value=>
                    <i class="icon-arrow-up"></i><span id="yes_span"></span>
                </button>
                <button class="no_feel" value=>
                    <i class="icon-arrow-down"></i><span id="no_span"></span>
                </button>
            </ul>
        </div>
        
        <div class="clear"></div>
    </div>
</div>
