                        </li>
                        <% end %>
                        <% end %>
                       
                    </ul>
                    <%= will_paginate(@taiciis, :previous_label => '上一页', :next_label => '下一页', :renderer => WillPaginate::ActionView::BootstrapLinkRenderer) %>

                </div>
            </div>

        </div>
    </div>
</section>

