<section id="explain_0">
  <div class="container">
    <div class="row">
      <div class="span8 offset2">
        <h2 class="title tHide">编辑个人信息</h2>
        
        <div id="latest">  

          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal",:method => :put }) do |f| %>

            <fieldset>
              
              <% if devise_error_messages! %>
                <button type="button" class="close" data-dismiss="alert">×</button>
                <p class="alert alert-error"><%=devise_error_messages!%></p>
              <% end %>
              <div class=control-group>
                <div class="controls">
                   <%= image_tag(@user.avatar, :class=>'thumb')%>
                </div>
              </div>

              <div class=control-group>
                <label class="control-label" for="input02">昵称</label>
                <label class="control-label">
                   <h4><%= @user.nick_name %></h4>
                </label>
              </div>

              <div class=control-group>
                <label class="control-label" for="input02">Email</label>
                <div class="controls">
                   <%= f.email_field :email, :autofocus => true %>
                </div>
              </div>
              <div class=control-group>
                <label class="control-label" for="input02">Current password</label>
                <div class="controls">
                  <%= f.password_field :current_password %>
                </div>
              </div>

              <div class=control-group>
                <label class="control-label" for="input02">新密码</label>
                <div class="controls">
                  <%= f.password_field :password, :autocomplete => "off" %>
                </div>
              </div>

              <div class=control-group>
                <label class="control-label" for="input02">确认新密码</label>
                <div class="controls">
                  <%= f.password_field :password_confirmation %>
                </div>
              </div>

              <div class=control-group>
                <div class="controls">
                  <div><%= f.submit "更改" %></div>
                </div>
              </div>
              

            </fieldset>
          <% end %>

          <div class="clear"></div>
        </div>

      </div>
    </div>
  </div>
</section>